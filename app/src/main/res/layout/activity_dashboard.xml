<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dashboard_upper_img"

                />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >


                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal">


                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:tint="@color/white"
                        />


                    <TextView
                        android:id="@+id/title"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/back"
                        android:text="Title"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />


                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:layout_toLeftOf="@+id/menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_search_white_24dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_more_vert_black_24dp"
                        android:tint="@color/white"
                        />


                </RelativeLayout>


                <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_2"
                android:layout_marginRight="@dimen/spacing_2"
                android:layout_marginTop="@dimen/spacing_half"
                >


                <TextView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/spacing_normal"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingRight="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_normal"
                    android:text="Search Flight Here"
                    android:textSize="@dimen/text_size_small"

                    >

                </TextView>


            </android.support.v7.widget.CardView>


            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="@dimen/spacing_half"
                android:paddingTop="@dimen/spacing_normal"
                android:text="Africa World Airlines"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="Experience Seamless flight schedules, book and pay."
                android:textColor="@color/text_white_87"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                />


        </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#efefef"
        android:orientation="vertical"
        >


        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_heightPercent="33.3%"
                app:layout_widthPercent="100%"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_quarter"
                        android:layout_marginLeft="@dimen/spacing_half"
                        android:layout_marginRight="@dimen/spacing_quarter"
                        android:layout_marginTop="@dimen/spacing_half"
                        android:layout_weight="1"


                        >


                        <LinearLayout
                            android:id="@+id/book_flight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/book_flight"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="Book a Flight"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_quarter"
                        android:layout_marginLeft="@dimen/spacing_quarter"
                        android:layout_marginRight="@dimen/spacing_half"
                        android:layout_marginTop="@dimen/spacing_half"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:id="@+id/check_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/check_in"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="Check-In"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/one"
                app:layout_heightPercent="33.3%"
                app:layout_widthPercent="100%"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_quarter"
                        android:layout_marginLeft="@dimen/spacing_half"
                        android:layout_marginRight="@dimen/spacing_quarter"
                        android:layout_marginTop="@dimen/spacing_quarter"
                        android:layout_weight="1"


                        >


                        <LinearLayout
                            android:id="@+id/flight_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/flight_status"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="Flight Status"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_quarter"
                        android:layout_marginLeft="@dimen/spacing_quarter"
                        android:layout_marginRight="@dimen/spacing_half"
                        android:layout_marginTop="@dimen/spacing_quarter"
                        android:layout_weight="1"
                        >


                        <LinearLayout
                            android:id="@+id/flight_schedule"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/flight_schedule"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="Flight Schedule"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/two"
                app:layout_heightPercent="33.3%"
                app:layout_widthPercent="100%"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_half"
                        android:layout_marginLeft="@dimen/spacing_half"
                        android:layout_marginRight="@dimen/spacing_quarter"
                        android:layout_marginTop="@dimen/spacing_quarter"
                        android:layout_weight="1"


                        >


                        <LinearLayout
                            android:id="@+id/manage_booking"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/manage_booking"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="Manage Booking"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/spacing_half"
                        android:layout_marginLeft="@dimen/spacing_quarter"
                        android:layout_marginRight="@dimen/spacing_half"
                        android:layout_marginTop="@dimen/spacing_quarter"
                        android:layout_weight="1"
                        >


                        <LinearLayout
                            android:id="@+id/faq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="@dimen/image_size_small"
                                android:layout_height="@dimen/image_size_small"
                                android:padding="@dimen/spacing_quarter"
                                android:src="@drawable/faq"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/spacing_half"
                                android:text="FAQ"
                                android:textSize="@dimen/text_size_normal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.percent.PercentRelativeLayout>


        </android.support.percent.PercentRelativeLayout>


    </LinearLayout>

</LinearLayout>
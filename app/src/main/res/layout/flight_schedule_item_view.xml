<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_quarter"
    android:layout_marginLeft="@dimen/spacing_half"
    android:layout_marginRight="@dimen/spacing_half"
    android:layout_marginTop="@dimen/spacing_quarter"
    >

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/departure"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_half"
                android:layout_marginTop="@dimen/spacing_half"
                android:text="ABUJA"
                android:textAllCaps="true"
                android:textColor="@color/divider_2"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/departureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_quarter"
                android:text="12:50 GMT"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"

                />

            <TextView
                android:id="@+id/departureDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_quarter"
                android:text="Mon - Sun"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"


                />

            <TextView
                android:id="@+id/departureNameCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGJ"
                android:textAllCaps="true"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_quarter"
                android:gravity="center"
                android:orientation="vertical"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@color/colorAccent"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp"

                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/grey_plane_inflight"
                    android:tint="@color/white"

                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Way"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_normal"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/destination"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_half"
                android:layout_marginTop="@dimen/spacing_half"
                android:text="ACCRA"
                android:textAllCaps="true"
                android:textColor="@color/divider_2"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/destinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_quarter"
                android:text="17:50 GMT"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"

                />

            <TextView
                android:id="@+id/destinationDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_quarter"
                android:text="Mon - Sun"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"


                />

            <TextView
                android:id="@+id/destinationNameCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACC"
                android:textAllCaps="true"
                android:textColor="@color/text_black_87"
                android:textSize="@dimen/text_size_small"

                />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

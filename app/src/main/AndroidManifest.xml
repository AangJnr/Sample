<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"

          package="io.nothing.sample"
    >

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>


    <uses-sdk tools:overrideLibrary="com.tsongkha.spinnerdatepicker"/>




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".AppIntroActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".BottomNavigationViewActivity"
             />

        <activity android:name=".BaseActivity"/>
        <activity android:name=".DrawerBottomSheetActivity"/>
        <activity android:name=".LoginActivity"/>
         <activity android:name=".MainActivity"/>
        <activity android:name=".UserPreferencesActivity"
             />
        <activity android:name=".TestActivity"/>
        <activity android:name=".SplashActivity"/>
        <activity android:name=".DashBoardActivity"/>
        <activity android:name=".BookFlightActivity"/>
        <activity android:name=".CheckInActivity"/>
        <activity android:name=".FlightScheduleActivity"/>
        <activity android:name=".FlightStatusActivity"/>

    </application>

</manifest>
